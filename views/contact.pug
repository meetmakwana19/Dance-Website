extends base.pug 
//- means extending base.pug and filling that template of base.pug over here

//- put this in block scripts line of base.pug
block scripts 
    script(src='/static/index.js') 

//- put this in block style line of base.pug
block style 
    style
      include  ../static/style.css
      include ../static/styleContact.css

block content 
    div.container 
        h1 This is contact 
        form(action="/contact", method="post", class="myForm")  <!-- method="post" for using papp.post request in app.js-->
            input(type="text", class="myInput", name="name", placeholder="Enter Your Name")
            input(type="phone", class="myInput", name="phone", placeholder="Enter Your Phone Number")
            input(type="email", class="myInput", name="email", placeholder="Enter Your Email")
            input(type="text", class="myInput", name="address", placeholder="Enter Your Address")
            button(class="btn")
                |Submit 